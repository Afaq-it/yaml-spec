#!/usr/bin/env bash

version=0.0.2

source "${ROOT:-$PWD}/.bpan/run-or-docker.bash"

check() (
  need aspell
)

dockerfile() (
  from alpine
  pkg aspell
)

main() (
  for file; do
    spell-check "$file"
  done
)

spell-check() (
  printf "* Spell checking '%s' " "$file"

  file=$1

  out=$(
    aspell \
      -p "$YAML_SPEC_ROOT/.aspell" \
      --encoding utf-8 \
      --mode markdown \
      list \
    < "$file" 2>&1
  ) || true

  if [[ $out ]]; then
    echo FAIL
    echo "$out"
    echo
    return 1
  fi

  echo OK
)

run "$@"
